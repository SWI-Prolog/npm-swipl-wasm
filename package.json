{
  "name": "swipl-wasm",
  "version": "2.0.0",
  "contributors": [
    "Raivo Laanemets",
    "Jesse Wright",
    "Jan Wielemaker"
  ],
  "license": "BSD-2-Clause",
  "type": "commonjs",
  "devDependencies": {
    "@types/node": "^18.7.14",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "eslint": "^8.24.0",
    "http-server": "^14.1.1",
    "mocha": "^10.0.0",
    "node-static": "^0.7.11",
    "npm-run-all": "^4.1.5",
    "puppeteer": "^18.0.5",
    "typescript": "^4.8.4"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:wasm-docker:build": "docker build -t swipl-wasm-image docker",
    "build:wasm-docker:create": "docker create --name swipl-wasm swipl-wasm-image",
    "build:wasm-docker:remove": "docker rm swipl-wasm",
    "build:wasm-docker:extract:data": "docker cp swipl-wasm:/swipl-devel/build.wasm.original/src/swipl-web.data dist/swipl/swipl-web.data",
    "build:wasm-docker:extract:wasm": "docker cp swipl-wasm:/swipl-devel/build.wasm.original/src/swipl-web.wasm dist/swipl/swipl-web.wasm",
    "build:wasm-docker:extract:web": "docker cp swipl-wasm:/swipl-devel/build.wasm.original/src/swipl-web.js dist/swipl/swipl-web.js",
    "build:wasm-docker:extract:node": "docker cp swipl-wasm:/swipl-devel/build.wasm.original/src/swipl-web.js dist/swipl/swipl.js",
    "build:wasm-docker:extract:bundled": "docker cp swipl-wasm:/swipl-devel/build.wasm/src/swipl.js dist/swipl/swipl-bundled.js",
    "build:wasm-docker:extract": "run-s build:wasm-docker:extract:*",
    "build:wasm-docker": "run-s build:wasm-docker:build build:wasm-docker:create build:wasm-docker:extract build:wasm-docker:remove",
    "build": "run-s build:wasm-docker",
    "test:serve-http": "http-server . -c-1",
    "test:node": "mocha tests/node.js --timeout 20000",
    "test:browser": "mocha tests/browser.js --timeout 20000",
    "test": "run-s test:node test:browser",
    "lint:types": "eslint dist --ext .ts",
    "lint:tests": "eslint tests --ext .js",
    "lint": "run-s lint:types lint:tests"
  },
  "peerDependencies": {
    "@types/emscripten": "^1.39.6"
  }
}
